{
  "name": "@hotepp/webpack-modules",
  "version": "1.1.4",
  "description": "Easy and robust webpack config to handle anything you can imagine, using the best practices",
  "repository": {
    "type": "git",
    "url": "https://github.com/hotepp/webpack-modules.git"
  },
  "keywords": [
    "webpack",
    "modules",
    "webpack-modules",
    "builder",
    "compiler",
    "dev-server",
    "loader",
    "module-bundler",
    "task-runner"
  ],
  "author": "Vlad Gerasimovich <hotepp@pm.me>",
  "license": "ISC",
  "bugs": "https://github.com/hotepp/webpack-modules/issues",
  "scripts": {
    "dev": "npm run sprite && webpack serve --config webpack.dev.js",
    "start": "npm run sprite && webpack serve --config webpack.dev.js",
    "build": "trash dist && npm run sprite && webpack --config webpack.prod.js",
    "sprite": "svgstore -o src/assets/images/sprite.svg src/assets/icons/**/*.svg",
    "lint": "lint-staged"
  },
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "devDependencies": {
    "@prettier/plugin-pug": "^1.16.2",
    "autoprefixer": "^10.3.1",
    "css-loader": "^6.2.0",
    "del": "^6.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-webpack-plugin": "^3.0.1",
    "fs": "^0.0.1-security",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.1",
    "image-minimizer-webpack-plugin": "^2.2.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^9.0.0",
    "imagemin-webp": "^6.0.0",
    "lint-staged": "^11.1.1",
    "mini-css-extract-plugin": "^2.1.0",
    "postcss": "^8.3.6",
    "postcss-loader": "^6.1.1",
    "postcss-modules": "^4.2.2",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "pug": "^3.0.2",
    "pug3-loader": "^2.4.3",
    "sass": "^1.37.5",
    "sass-loader": "^12.1.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-webpack-plugin": "^3.0.1",
    "svgo": "^2.3.1",
    "svgstore-cli": "^2.0.0",
    "trash-cli": "^4.0.0",
    "webpack": "^5.48.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0",
    "workbox-webpack-plugin": "^6.1.5"
  },
  "dependencies": {
    "bulma": "^0.9.3",
    "normalize.css": "^8.0.1"
  },
  "lint-staged": {
    "src/**/*.{css,sass,scss}": [
      "pretty-quick --pattern './src/**/*.{css,sass,scss}'",
      "stylelint './src/**/*.{css,sass,scss}' --fix"
    ],
    "src/**/*.{js,jsx}": [
      "pretty-quick --pattern './src/**/*.{js,jsx}'",
      "eslint './src/**/*.{js,jsx}' --fix"
    ],
    "src/**/*.pug": [
      "pretty-quick --pattern './src/**/*.pug'"
    ]
  }
}
